<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.InterventionFragment"
    android:background="@color/dark_primary">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Intervention Records"
        android:fontFamily="cursive"
        android:textSize="40sp"
        android:textColor="@color/light_primary"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Subject"
        android:textColor="@color/light_primary"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:textSize="40sp"
        android:layout_marginTop="90dp"/>

    <EditText
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:inputType="text"
        android:id="@+id/interventionsubject"
        android:background="@drawable/shape"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="100dp"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Description"
        android:textColor="@color/light_primary"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:textSize="40sp"
        android:layout_marginTop="170dp"/>


    <EditText
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:inputType="text"
        android:id="@+id/interventiondescription"
        android:background="@drawable/shape"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="100dp"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Location"
        android:textColor="@color/light_primary"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:textSize="40sp"
        android:layout_marginTop="250dp"/>


    <EditText
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:inputType="text"
        android:id="@+id/interventionlocation"
        android:background="@drawable/shape"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="100dp"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Optional"
        android:textColor="@color/light_primary"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:textSize="40sp"
        android:layout_marginTop="350dp"/>

    <TextView
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:text="Upload Image"
        android:textColor="@color/light_primary"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:textSize="40sp"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="70dp"/>

    <TextView
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:text="Upload Video"
        android:textColor="@color/light_primary"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:textSize="40sp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="450dp"/>


    <Button
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginLeft="300dp"
        android:background="@drawable/ic_baseline_image_24"
        android:layout_marginTop="400dp"
        android:id="@+id/imagebtn"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_baseline_video_library_24"
        android:layout_marginLeft="300dp"
        android:id="@+id/videobtn"
        android:layout_marginTop="450dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="100dp"
        android:text="Save records"
        android:textSize="20sp"
        android:id="@+id/savereintervention" />


</FrameLayout>