    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/lieout"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:id="@+id/redFlagBtn"
            android:drawableStart="@drawable/ic_baseline_add_circle_24"
            android:drawableLeft="@drawable/ic_baseline_add_circle_24"
            android:drawablePadding="5dp"
            android:text="Create Red Flag" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lieout2"
        android:layout_centerVertical="true"
        android:layout_below="@+id/lieout"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="match_parent"
