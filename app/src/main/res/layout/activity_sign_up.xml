<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SignUpActivity"
    android:background="@color/dark_primary">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:src="@drawable/detective"
        android:id="@+id/signUpImage"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's Get Started"
        android:fontFamily="cursive"
        android:textColor="@color/light_primary"
        android:textSize="40sp"
        android:layout_below="@id/signUpImage"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout1"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">


        <EditText
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:id="@+id/signupname"
            android:background="@drawable/shape"
            android:drawableLeft="@drawable/round_person_black_24dp"
            android:drawableStart="@drawable/round_person_black_24dp"
            android:drawablePadding="5dp"
            android:hint="Enter Your Name"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout2"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/layout1">

        <EditText
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:id="@+id/signupemail"
            android:background="@drawable/shape"
            android:hint="Enter Your Email"
            android:drawableLeft="@drawable/round_email_black_24dp"
            android:drawableStart="@drawable/round_email_black_24dp"
            android:drawablePadding="5dp"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout3"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/layout2">

        <EditText
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/shape"
            android:id="@+id/signuppassword"
            android:hint="Enter Your Password"
            android:drawableLeft="@drawable/round_lock_black_24dp"
            android:drawableStart="@drawable/round_lock_black_24dp"
            android:drawablePadding="5dp"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout4"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/layout3">

        <EditText
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:id="@+id/signupconfirm"
            android:drawableLeft="@drawable/round_lock_black_24dp"
            android:drawableStart="@drawable/round_lock_black_24dp"
            android:drawablePadding="5dp"
            android:background="@drawable/shape"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout4"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:background="@drawable/shape"
            android:textColor="@color/black"
            android:id="@+id/signUpBtn"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account? Log In"
        android:textSize="20sp"
        android:id="@+id/signupcreate"
        android:textColor="@color/light_primary"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:fontFamily="cursive"
        android:textStyle="bold"/>



</RelativeLayout>